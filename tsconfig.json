{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "node16",
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["src/application/domain/*"],
      "@gateway/*": ["src/application/gateway/*"],
      "@infra/*": ["src/application/infra/*"],
      "@driver/*": ["src/driver/*"],
      "@env": ["src/env.ts"],
      "@main": ["src/main.ts"],
      "@application/*": ["src/application/*"]
    }
  }
}
